<!--pages/msg_success/msg_success.wxml-->
<view class="page">
  <view class="weui-msg">
    <view class="weui-msg__icon-area">
      <icon type="success" size="93"></icon>
    </view>
    <view class="weui-msg__text-area">
      <view class="weui-msg__title">认证提交成功</view>
      <view class="weui-msg__desc">请耐心等待认证结果</view>
    </view>
    <view class="weui-msg__opr-area">
      <view class="weui-btn-area">
        <button class="weui-btn" type="primary" bindtap="success">退出至我的主页</button>
        <button class="weui-btn" type="default" bindtap="again">重新提交认证</button>
      </view>
    </view>
    <view class="weui-msg__extra-area">
      <view class="weui-footer">
      </view>
    </view>
  </view>
</view>
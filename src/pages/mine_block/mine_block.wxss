.all_back{
  display: flex;
  flex-direction: column;
  height: 400rpx;
  align-items: center;
  background-color: orange;
  opacity: 0.9;

}
.my_backimage{
  position: absolute;
  top: 0rpx;
  bottom: 0rpx;
  left: 0rpx;
  display: flex;
  z-index: -1;
}
.root{
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
}
.loginbutton{
  top: 300rpx;
} 
.button{
  width: 100%;
  border: none;
  background: white;
  text-align: left;
  padding: 0px;
  margin: 0px;
  line-height: 1.3;
  font-size: 16px
}
.button::after{
  border: none;
  border-radius: 0;
}
.loginout{
  font-size: 33rpx;
  color: gray;
}
.unlogin_file{
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  margin-top: 0rpx;
  margin-bottom: 10rpx;
  top:auto;
}
.userprofile{
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  margin-top: 30rpx;
  margin-bottom: 10rpx;
  opacity: 1;
}
/* 用css画一个向右的箭头 */
.right_arrow{
  border: solid black;
  border-width: 0 3px 3px 0;
  padding: 3px;
  position: absolute;
  right: 15px;
  margin-left: 66%;
  transform: rotate(-45deg);
  -webkit-transform: rotate(-45deg);
}
.iformationback{
  position: relative;
  display: flex;
  padding: 20rpx;
  background-color: white;
  align-items: center;
  border-bottom: 1rpx solid gainsboro;
  opacity: 0.9;
}